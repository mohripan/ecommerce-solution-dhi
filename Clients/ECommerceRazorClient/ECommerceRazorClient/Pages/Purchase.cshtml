@page "{id:int}/{price:decimal}"
@model PurchaseModel
@{
    ViewData["Title"] = "Purchase";
}

<h2>Purchase</h2>

<form method="post">
    <div>
        <label>Product ID:</label>
        <input type="text" value="@Model.ProductId" readonly class="form-control" />
    </div>
    <div>
        <label>Price:</label>
        <input type="text" value="@Model.Price" readonly class="form-control" />
    </div>
    <div>
        <label>Quantity:</label>
        <input type="number" name="Quantity" min="1" required class="form-control" />
    </div>
    <div>
        <label>Remarks:</label>
        <textarea name="Remarks" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Confirm Purchase</button>
</form>
<a asp-page="/BuyerMenu" class="btn btn-secondary">Back to Search</a>
